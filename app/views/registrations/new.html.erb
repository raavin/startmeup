<div id="box">
      <div class="block" id="block-signup">
        <h2>Sign up</h2>
        <div class="content">
        <% form_for resource_name, resource, :url => registration_path(resource_name),:html => {:class => "form"} do |f| -%>
        <%= f.error_messages :class => "message error" %>
            <div class="group wat-cf">
            	<br />
              <div class="left">
                <%= f.label :email, "Email",:class => "label" %>
              </div>
              <div class="right">
                <%= f.text_field :email, :class => "text_field" %>
                <span class="description">Ex: test@example.com</span>
              </div>
            </div>
            <div class="group wat-cf">
              <div class="left">
                <%= f.label :password, "Password", :class => "label" %>
              </div>
              <div class="right">
                <%= f.password_field :password, :class => "text_field" %>
                <span class="description">Must contains the word 'yeah'</span>
              </div>
            </div>
            <div class="group wat-cf">
              <div class="left">
                <%= f.label :password_confirmation, "Password confirmation", :class => "label" %>
              </div>
              <div class="right">
                <%= f.password_field :password_confirmation, :class => "text_field" %>
                <span class="description">Must contains the word 'yeah'</span>
              </div>
            </div>

            <div class="group navform wat-cf">
              <button class="button" type="submit">
                <img src="/images/web-app-theme/tick.png" alt="Save" /> Signup
              </button>
            </div>
          <% end %>
        </div>
      </div>
 </div>
 <%= render :partial => "shared/devise_links" %>
 <% content_for :sidebar, render(:partial => 'shared/sidebar') -%>